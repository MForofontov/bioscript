{
  "name": "@bioscript/seq-align",
  "version": "0.1.0",
  "description": "Pairwise sequence alignment algorithms (Needleman-Wunsch, Smith-Waterman) with BLOSUM and PAM scoring matrices.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MForofontov/bioscript.git",
    "directory": "packages/seq-align"
  },
  "homepage": "https://github.com/MForofontov/bioscript/tree/main/packages/seq-align#readme",
  "bugs": {
    "url": "https://github.com/MForofontov/bioscript/issues"
  },
  "keywords": [
    "bioinformatics",
    "sequence",
    "alignment",
    "needleman-wunsch",
    "smith-waterman",
    "pairwise",
    "global-alignment",
    "local-alignment",
    "blosum",
    "pam",
    "scoring-matrix"
  ],
  "author": "MForofontov",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:coverage && npm run validate:reference",
    "validate:reference": "ts-node scripts/validate-reference.ts",
    "benchmark": "ts-node scripts/benchmark.ts",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
