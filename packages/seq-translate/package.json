{
  "name": "@bioscript/seq-translate",
  "version": "0.1.1",
  "description": "Efficient sequence translation utilities supporting all NCBI genetic code tables.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MForofontov/bioscript.git",
    "directory": "packages/seq-translate"
  },
  "homepage": "https://github.com/MForofontov/bioscript/tree/main/packages/seq-translate#readme",
  "bugs": {
    "url": "https://github.com/MForofontov/bioscript/issues"
  },
  "keywords": [
    "bioinformatics",
    "sequence",
    "translation",
    "genetic code",
    "codon",
    "ncbi",
    "browser",
    "worker-threads",
    "multiprocessing",
    "streaming"
  ],
  "author": "Mykyta Forofontov",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser-index.d.ts",
      "import": "./dist/browser-index.js",
      "require": "./dist/browser-index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@bioscript/seq-utils": "^0.1.0"
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "esbuild dist/browser-bundle.js --bundle --format=iife --global-name=bioseqTranslate --outfile=dist/bioseq-translate.bundle.js --platform=browser --external:worker_threads && cp dist/bioseq-translate.bundle.js e2e/",
    "build:all": "npm run build && npm run build:browser",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:browser": "npm run build && npm run build:browser && playwright test",
    "test:browser:headed": "npm run build && npm run build:browser && playwright test --headed",
    "test:all": "npm test && npm run test:browser",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build:all",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:npm": "npm publish",
    "publish:dry": "npm publish --dry-run"
  },
  "publishConfig": {
    "access": "public"
  }
}
