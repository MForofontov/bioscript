{
  "name": "@bioscript/seq-translate",
  "version": "1.0.0",
  "description": "Efficient sequence translation utilities supporting all NCBI genetic code tables.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MForofontov/bioscript.git",
    "directory": "packages/seq-translate"
  },
  "homepage": "https://github.com/MForofontov/bioscript/tree/main/packages/seq-translate#readme",
  "bugs": {
    "url": "https://github.com/MForofontov/bioscript/issues"
  },
  "keywords": [
    "bioinformatics",
    "sequence",
    "translation",
    "genetic code",
    "codon",
    "ncbi",
    "browser",
    "worker-threads",
    "multiprocessing",
    "streaming"
  ],
  "author": "MForofontov",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser-index.js",
      "require": "./dist/browser-index.js",
      "types": "./dist/browser-index.d.ts"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "esbuild dist/browser-bundle.js --bundle --format=iife --global-name=bioseqTranslate --outfile=dist/bioseq-translate.bundle.js --platform=browser --external:worker_threads && cp dist/bioseq-translate.bundle.js e2e/",
    "build:all": "npm run build && npm run build:browser",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:browser": "npm run build && npm run build:browser && playwright test",
    "test:browser:headed": "npm run build && npm run build:browser && playwright test --headed",
    "test:all": "npm test && npm run test:browser",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build:all",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:npm": "npm publish",
    "publish:dry": "npm publish --dry-run"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "esbuild": "^0.19.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-html-reporter": "^3.10.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.15.0"
  }
}
