{
  "name": "@bioscript/seq-stream",
  "version": "0.1.0",
  "description": "Streaming parser/writer for FASTA and FASTQ files with quality score conversion and statistics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MForofontov/bioscript.git",
    "directory": "packages/seq-stream"
  },
  "homepage": "https://github.com/MForofontov/bioscript/tree/main/packages/seq-stream#readme",
  "bugs": {
    "url": "https://github.com/MForofontov/bioscript/issues"
  },
  "keywords": [
    "bioinformatics",
    "fasta",
    "fastq",
    "streaming",
    "parser",
    "quality-scores",
    "phred",
    "gc-content",
    "sequence-analysis"
  ],
  "author": "MForofontov",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "esbuild dist/browser-bundle.js --bundle --format=iife --global-name=bioseqStream --outfile=e2e/bioseq-bundle.js --platform=browser --external:stream --external:fs --external:zlib",
    "test": "jest",
    "test:local": "jest --coverage",
    "test:watch": "jest --watch",
    "test:browser": "npm run build && npm run build:browser && playwright test",
    "test:browser:headed": "npm run build && npm run build:browser && playwright test --headed",
    "test:all": "npm test && npm run test:browser",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:npm": "npm publish",
    "publish:dry": "npm publish --dry-run"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.58.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-html-reporter": "^3.10.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.15.0"
  }
}
