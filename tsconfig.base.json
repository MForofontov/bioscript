{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@bioscript/seq-stream": ["packages/seq-stream/src"]
    },
    "outDir": "dist"
  },
  "include": ["index.ts", "packages/*/src/**/*"],
  "exclude": ["dist", "node_modules", "packages/*/tests/**/*", "packages/*/__tests__/**/*", "packages/*/e2e/**/*"]
}
